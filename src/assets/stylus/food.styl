@import "mixin.styl"
.food-wrap{
	position: fixed;
	left: 0;
	top: 0;
	bottom: 46px;
	z-index: 30;
	width: 100%;
	background: #fff;
	&.food-enter-active, &.food-leave-active{
		transition: all 0.2s linear;
		transform: translate3d(0,0,0);
	}
	&.food-enter, &.food-leave-active {
	  	transform: translate3d(100%,0,0);
	}
	.image-header{
		width:100%;
		position: relative;
		img{
			width:100%;
			vertical-align: top;
		}
		.icon{
			position: absolute;
			left: 0px;
			top: 0px;
			color: #fff;
			padding: 15px;
			font-size: 20px;
		}
	}
	.food-tit{
		padding: 18px 0 15px 18px;
		h1{
			font-weight: bold;
			font-size: 18px;
			padding-bottom: 8px;
		}
		.sell-count{
			font-size:14px;
			color: #ccc;
			span{
				margin-right: 12px;
			}
		}
		.price{
			font-weight: bold;
			font-size: 14px;
			padding-top: 18px;
			vertical-align: top;
			position: relative;
			strong{
				color: red;
				font-size: 20px;
				i{
					font-size: 14px;
				}
			}
			del{ 
				color: #ccc;
			}
			.buy{
				position: absolute;
				right: 10px;
				bottom: -2px;
				background: #00a0dc;
				color: #fff;
				margin-top: 10px;
				border-radius: 20px;
				padding: 10px;
				font-weight: normal;
				z-index: 99;
				&.fade-enter-active, &.fade-leave-active{
					transition: all 0.2s;
					opacity: 1;
				}
				&.fade-enter, &.fade-leave-active {
					opacity: 0;
				}
			}
			.cartControl{
				z-index: 98;
			}
		}
	}
	.food-desc{
		font-size: 14px;
		padding: 18px;
		color: #ccc;
		line-height: 20px;
		h2{
			font-weight: bold;
			color: #333;
			padding-bottom: 6px;
		}
	}
	.food-ratings{
		padding-top: 18px;
		font-size: 14px;
		h2{
			font-weight: bold;
			color: #333;
			padding-left: 18px;
		}
	}
	.rating-list{
		padding: 0 18px;
		.rating-item{
			border-1px(rgba(7,17,27,0.1));
			padding: 16px 0;
			positive: relative;
			color: rgb(147,153,169);
			.time{
				margin-bottom: 6px;
				font-size: 10px;
				line-height: 12px;
			}
			.user{
				position: absolute;
				right: 0;
				top: 16px;
				line-height: 14px;
				font-size: 10px;
				img{
					width: 12px;
					height: 12px;
					border-radius: 50%;
					vertical-align: top;
					margin-left: 5px;
				}
			}
			.rating-content{
				line-height: 16px;
				font-size: 12px;
				color: rgb(7,17,27);
				.icon{
					line-height: 24px;
					margin-right: 4px;
					font-size: 12px;
					&.icon-thumb_up{
						color: rgb(0,160,220);
					}
					&.icon-thumb_down{
						color: rgb(147,153,159)
					}
				}
			}
		}
	}
	.no-rating{
		padding: 16px 0;
		font-size: 12px;
		color: rgb(147,153,159)
		text-align: center;
	}
}
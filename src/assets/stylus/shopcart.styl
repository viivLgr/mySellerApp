@import "../assets/stylus/mixin.styl"
.shopcart-wrap{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 46px;
	color: #fff;
	z-index: 50;
	.content{
		display: flex;
		width: 100%;
		background: #141d27;
		.shopcart-left{
			flex: 1;
			color: rgba(255,255,255,0.4);

			.shopcart-price{
				padding-left: 70px;
				.total{
					display: inline-block;
					margin-top: 10px;
					padding-right: 10px;
					font-weight: 700;
					border-right: 1px solid rgba(255,255,255,0.1);
					line-height: 26px;
					font-size: 16px;
					&.highLight {
						color: #fff;
					}
				}
				.txt{
					font-size: 12px;
					padding-left: 5px;
				}
			}
			.shopcart-icon-bg{
				position: absolute;
				width: 40px;
				height: 40px;
				padding: 5px;
				border-radius: 50%;
				top: -10px;
				left: 10px;
				background: #141d27;
				.shopcart-icon{
					display: table-cell;
					text-align: center;
					vertical-align: middle;
					background: #2b343c;
					border-radius: 50%;
					width: 40px;
					height: 40px;
					font-size: 24px;
					color: #80858a;
					&.shopcart-icon-active{
						background: rgb(0,160,220);
						color: #fff;
					}
				}
				.shopcart-count{
					padding: 2px 5px;
					background: rgb(240,20,20);
					box-shadow: 0 4px 8px 0 rgba(0,0,0,0.4);
					color: #fff;
					border-radius: 10px;
					display: inline-block;
					position: absolute;
					right: 0;
					top: 0;
					font-size: 12px;
				}
			}
		}
		.shopcart-right{
			flex: 0 0 105px;
			line-height: 46px;
			background: #2b343c;
			text-align: center;
			font-size: 14px;
			&.highLight{
				color: #fff;
				background: #00b431;
			}
		}
	}
	.ball-container{
		.ball{
			position: fixed;
			left: 32px;
			bottom: 22px;
			z-index: 200;
			transition: all 0.4s cubic-bezier(0.49, -0.29, 0.75, 0.41);
			.inner{
				width: 16px;
				height: 16px;
				border-radius: 50%;
				background: rgb(0,160,220);
				transition: all 0.4s linear;
			}
		}
	}
	.shopcart-list{
		position: absolute;
		top: 0;
		left: 0;
		background: #fff;
		border-top: 1px solid rgb(0,160,220);
		width: 100%;
		z-index: -1;
		transform: translate3d(0, -100%, 0);
		&.fold-enter-active, &.fold-leave-active{
			transition: all 0.5s;
		}
		&.fold-enter, &.fold-leave-active{
			transform: translate3d(0, 0, 0);
		}
		.list-header{
			line-height: 14px;
			overflow: hidden;
			padding: 10px;
			border-bottom: 1px solid #eee;
			.title{
				float:left;
				margin-left: 10px;
				color: rgb(0,160,220);
				font-size: 14px;
				font-weight: bold;
			}
			.empty{
				float: right;
				margin-right: 10px;
				color: rgb(0,160,220);
				font-size: 14px;
				font-weight: bold;
			}
		}
		.list-content{
			max-height: 134px;
			overflow: hidden;
			.food{
				display: flex;
				font-size: 12px;
				color: #666;
				padding: 15px 20px;
				font-size: 12px;
    			border-bottom: 1px solid #eee;
    			position: relative;
    			&:last-child{
    				border:none;
    			}
				.name{
					flex: 1;
					text-overflow:ellipsis;
					overflow: hidden;
					white-space: nowrap;
				}
				.price{
					flex: 0 0 60px;
				}
				.cartcontrol-wrapper{
					flex: 0 0 100px;
					.cartControl{
						top: 4px;
					}
				}
			}
		}
	}
	.list-mask{
		width: 100%;
		height: 100%;
		backdrop-filter: blur(10px)
		position: fixed;
		left: 0;
		top: 0;
		background: rgba(7, 17, 27, 0.6);
		z-index: -2;
		opacity: 1;
		&.mask-enter-active, &.mask-leave-active{
			transition: all 0.5s;
		}
		&.mask-enter, &.mask-leave-active{
			opacity: 0;
			background: rgba(7, 17, 27, 0);
		}
	}
}
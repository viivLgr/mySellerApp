@import "../assets/stylus/mixin.styl"
.shopcart-wrap{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 46px;
	background: #141d27;
	color: #fff;
	z-index: 50;
	display: flex;
	.shopcart-left{
		flex: 1;
		position: relative;
		color: rgba(255,255,255,0.4);
		.shopcart-price{
			padding-left: 70px;
			.total{
				display: inline-block;
				margin-top: 10px;
				padding-right: 10px;
				font-weight: 700;
				border-right: 1px solid rgba(255,255,255,0.1);
				line-height: 26px;
				font-size: 16px;
			}
			.txt{
				font-size: 12px;
				padding-left: 5px;
			}
		}
		.shopcart-icon-bg{
			position: absolute;
			width: 40px;
			height: 40px;
			padding: 5px;
			border-radius: 50%;
			top: -10px;
			left: 10px;
			background: #141d27;
			.shopcart-icon{
				display: table-cell;
				text-align: center;
				vertical-align: middle;
				background: #2b343c;
				border-radius: 50%;
				width: 40px;
				height: 40px;
				font-size: 24px;
				color: #80858a;
			}
		}
	}
	.shopcart-right{
		flex: 0 0 105px;
		line-height: 46px;
		background: #2b343c;
		text-align: center;
	}
	
}
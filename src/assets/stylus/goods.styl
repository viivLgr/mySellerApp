@import "../assets/stylus/mixin.styl"
.goods{
	position: absolute;
	top: 172px;
	bottom: 46px;
	width: 100%;
	display: flex;
	overflow: hidden;
	.menu-wrapper{
		flex: 0 0 80px;
		width: 80px;
		background: #f3f5f7;
		justify-items: middle;
		align-items: center;
		.menu-item{
			display:table;
			height: 54px;
			width: 80px;
			line-height: 14px;
			font-size: 12px;
			box-sizing:border-box;
			padding: 0 5px;
			&.current{
				background: #fff;
				font-weight: bold;
				position: relative;
				top: -1px;
				.text{
					border-none();
				}
			}
			.text{
				display:table-cell;
				text-align: center;
				vertical-align: middle;
				width:80px;
				border-1px(rgba(7,17,27,0.1));
			}
			&:last-child{
				.text{
					border-none();
				}
			}
			.icon{
				display:inline-block;
				width: 16px;
				height: 16px;
				margin-right:2px;
				background-repeat: no-repeat;
				background-size: 16px;
				vertical-align: middle;
				&.decrease{
					bg-image("../assets/img/decrease_3");
				}
				&.discount{
					bg-image("../assets/img/discount_3");
				}
				&.special{
					bg-image("../assets/img/special_3");
				}
				&.invoice{
					bg-image("../assets/img/invoice_3");
				}
				&.guarantee{
					bg-image("../assets/img/guarantee_3");
				}
			}
		}
	}
	.foods-wrapper{
		flex: 1;
		.foods-item{
			.item-title{
				background: #eee;
				text-indent: 10px;
				line-height: 30px;
				font-size: 14px;
				color: #666;
				border-left: 2px solid #ccc;
				text-align: left;
			}
			.item-content{
				display:flex;
				padding: 20px;
				border-1px(rgba(7,17,27,0.1));
				position: relative;
				&:last-child{
					border-none();
				}
				.img{
					flex: 0 0 57px;
				}
				.con{
					flex: 1;
					padding-left: 10px;
					text-align: left;
					h2{
						font-weight: bold;
						font-size: 14px;
						line-height: 20px;
					}
					.description,.sellCount{
						font-size: 12px;
						color: #999;
						line-height: 16px;
						padding: 1px 0;
					}
					.price{
						font-size: 12px;
						font-weight: bold;
						padding: 2px 0;
						span{
							font-size: 16px;
							color: red;
							.i{
								font-size: 12px;
							}
						}
						del{
							color: #ccc;
							margin-left: 5px;
						}
					}
				}
			}
		}
	}
}